{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true
  },
  "exclude": [
    "node_modules"
  ]
}